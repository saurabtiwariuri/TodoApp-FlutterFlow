{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/task.json",
  "title": "Task",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "details": {
      "type": "string"
    },
    "completed": {
      "type": "boolean"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Task creation time stored as Firestore timestamp"
    },
    "user": {
      "type": "string",
      "pattern": "^/users/[A-Za-z0-9]+$",
      "description": "Reference to the owning user document"
    }
  },
  "required": [
    "title",
    "completed",
    "created",
    "user"
  ],
  "additionalProperties": false
}
